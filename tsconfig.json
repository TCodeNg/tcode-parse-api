{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"esModuleInterop": false,
		"target": "es2019",
		"lib": ["es2019"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/*"
			]
		},
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}